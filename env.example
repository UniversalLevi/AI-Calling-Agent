# ============================================================================
# AI CALLING BOT - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ============================================================================
# REQUIRED - OPENAI API
# ============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# ============================================================================
# REQUIRED - TWILIO (FOR PHONE CALLS)
# ============================================================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================================================
# OPTIONAL - ENHANCED HINDI TTS PROVIDERS
# ============================================================================

# Azure Cognitive Services (Best Hindi quality - Recommended)
# Get from: https://portal.azure.com
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=eastus

# Google Cloud TTS (Very good Hindi quality)
# Get from: https://console.cloud.google.com
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
# OR use API key instead:
# GOOGLE_CLOUD_TTS_KEY=your_google_api_key

# ElevenLabs (Good for custom voices)
# Get from: https://elevenlabs.io
ELEVENLABS_API_KEY=your_elevenlabs_key
ELEVENLABS_VOICE_ID=your_voice_id

# ============================================================================
# OPTIONAL - ALTERNATIVE AI PROVIDER
# ============================================================================
# Google Gemini (alternative to OpenAI)
GEMINI_API_KEY=your_gemini_api_key

# ============================================================================
# AUDIO CONFIGURATION
# ============================================================================
SAMPLE_RATE=16000
CHANNELS=1
RECORD_SECONDS=7.0
DEVICE_INDEX_IN=
DEVICE_INDEX_OUT=

# ============================================================================
# SPEECH-TO-TEXT CONFIGURATION
# ============================================================================
WHISPER_MODEL_SIZE=base
LANGUAGE=en
AUTO_DETECT_LANGUAGE=true
DEFAULT_LANGUAGE=en

# ============================================================================
# TEXT-TO-SPEECH CONFIGURATION (Master Branch Enhanced Settings)
# ============================================================================
# Preferred TTS provider (azure > google > openai > gtts)
# Master branch provides significantly better Hindi/Hinglish pronunciation
# with advanced transliteration and natural speech patterns
TTS_PROVIDER=openai

# OpenAI TTS Settings (Master Branch Configuration)
# Speed=1.0 provides natural, human-like speech (not robotic)
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_VOICE=nova
OPENAI_TTS_SPEED=1.0

# Legacy TTS Settings
USE_COQUI_TTS=false
TTS_VOICE=en
HINDI_TTS_VOICE=hi
ENGLISH_TTS_VOICE=en

# ============================================================================
# SIP CONFIGURATION (OPTIONAL - FOR ASTERISK INTEGRATION)
# ============================================================================
SIP_SERVER_IP=localhost
SIP_USERNAME=1001
SIP_PASSWORD=botpass123
SIP_TARGET_EXTENSION=1002

# ============================================================================
# DEBUG AND LOGGING
# ============================================================================
PRINT_TRANSCRIPTS=true
PRINT_BOT_TEXT=true

# ============================================================================
# SYSTEM PROMPT (OPTIONAL - CUSTOMIZE BOT BEHAVIOR)
# ============================================================================
SYSTEM_PROMPT=You are an Female AI Calling Assistant whose only job is to handle phone conversations in a natural, human-like, empathetic, and professional manner. Always speak in short, clear sentences with a friendly and confident tone, using light human fillers sparingly but never sounding robotic or repetitive. Greet warmly at the start, explain the call's purpose, ask one question at a time, confirm important details, and politely close at the end. Stay strictly focused on the specific purpose of the call (e.g., booking, support, survey) and never answer or engage with anything outside this boundary; if the caller asks something unrelated, simply say: "Sorry, I can't help with that. I can only assist with [purpose of call]." If you don't understand something, ask them to repeat or rephrase politely. Your goal is to simulate a real human phone call where the caller feels heard, respected, and helpedâ€”without ever stepping outside your defined role.

# ============================================================================
# HUMAN-LIKE FEATURES CONFIGURATION (NEW - FOR FASTER, MORE NATURAL RESPONSES)
# ============================================================================
# Enable natural pauses and fillers for human-like speech
ENABLE_NATURAL_PAUSES=true
ENABLE_FILLER_WORDS=true
FILLER_FREQUENCY=0.25

# Streaming AI responses for faster generation
ENABLE_STREAMING_RESPONSES=true
STREAMING_CHUNK_SIZE=10

# TTS Cache for instant playback of common phrases
ENABLE_TTS_CACHE=true
TTS_CACHE_DIR=tts_cache
PRE_GENERATE_COMMON_PHRASES=true

# Dashboard Integration
DASHBOARD_INTEGRATION=true
DASHBOARD_URL=http://localhost:5000
